extends ../layout.pug

block content
    h2 Editar datos de cliente;
    //- mismo formulario, se envia a otro sitio
    form(method="POST", action="/clientes/update")
        .form-group 
            label Nombre
            input.form-control(type="text", name="nombre" value=cliente.nombre)
        .form-group 
            label Apellidos
            input.form-control(type="text", name="apellidos" value=cliente.apellidos)
        .form-group 
            label Direccion
            input.form-control(type="text", name="direccion" value=cliente.direccion)
        .form-group 
            label email
            input.form-control(type="text", name="email" value=cliente.email)
        .form-group 
            label Edad
            input.form-control(type="text", name="edad" value=cliente.edad)
        .form-group 
            label Sexo
            select.form-control(name="sexo")
                option(value="m") Masculino
                option(value="f") Femenino
        .form-group 
            label Fecha de inscripci√≥n
            input.form-control(type="text", name="fecha_inscripcion" value=cliente.fecha_inscripcion)
        .form-group 
            label Cuota
            input.form-control(type="text", name="cuota" value=cliente.cuota)
        .form-group 
            label Fecha de nacimiento
            input.form-control(type="text", name="fecha_nacimiento" value=cliente.fecha_nacimiento)
        .form-group 
            label DNI
            input.form-control(type="text", name="dni" value=cliente.dni)
        .form-group 
            label Profesor
            input.form-control(type="text", name="profesor" value=cliente.profesor) 
        
        //- hay que pasar el id del cliente que vas a modificar:
        input(type="hidden", name="clienteId", value=cliente.id)
        input.btn.btn-block.btn-warning(type="submit" value="Enviar")   
            
//- Campos de cliente: apellidos, direccion, email, edad, sexo, fecha_inscripcion, cuota, fecha_nacimiento, dni, profesor